div
  div(class="navbar-fixed-top")
    div(class="alert alert-warning", role="alert", *ngIf="alertService.isLoading()")
      span(class="glyphicon glyphicon-refresh", aria-hidden="true")
      |  #{__('Loading...')}
    div(uib-alert, *ngFor="let alert of alertService.alerts", [ngClass]="alert.class", close="alertService.closeAlert($index)")
      span(class="glyphicon glyphicon-exclamation-sign", aria-hidden="true")
      |  {{alert.msg}}