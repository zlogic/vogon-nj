form([formGroup]="usersettingsForm", (ngSubmit)="submitEditing()", autocomplete="off", novalidate)
  div(class="card-container")
    mat-card(class="large-card")
      mat-card-title
        | #{__('User settings')}
      mat-card-content
        section
          mat-input-container
            input(matInput, type="text", placeholder=__('Username'), formControlName="username")
        section
          mat-input-container
            input(matInput, type="password", placeholder=__('Password'), formControlName="password")
        section
          p
            button(mat-raised-button, type="button", (click)="importData()") #{__('Import data')}
            span &nbsp;
            input(type="file" #fileInput)
          p
            button(mat-raised-button, type="button", (click)="exportData()") #{__('Export data')}
      mat-card-actions
        button(mat-button, type="submit", [disabled]="!usersettingsForm.valid") #{__('Apply')}
        button(mat-button, type="button", (click)="cancelEditing()") #{__('Cancel')}
div(style="display: none;")
  form(method="post", action="service/export", #exportForm)
    input(type="hidden", name="access_token", [value]="authorizationService.getAccessToken()")
